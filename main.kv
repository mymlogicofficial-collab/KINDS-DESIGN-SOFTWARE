<KindsRoot>:
    orientation: 'vertical'

    # AREA A: CANVAS
    RelativeLayout:
        size_hint_y: 0.65
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    # THE WORKBENCH (Eraser, Ruler, Triangle)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.15
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            Button:
                text: "PINK ERASER"
                background_color: (1, 0.6, 0.6, 1) if root.eraser_active else (0.4, 0.4, 0.4, 1)
                on_press: root.toggle_eraser()
            Button:
                text: "RULER"
            Button:
                text: "TRIANGLE"

    # THE DRAWER SYSTEM
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.4 if root.drawer_g_open else 0.2

        # DRAWER G: DUAL COLOR LAB
        BoxLayout:
            size_hint_y: 1 if root.drawer_g_open else 0.001
            opacity: 1 if root.drawer_g_open else 0
            padding: 10
            spacing: 20

            # Color Station 1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Color 1"
                Slider: # Hue
                    min: 0
                    max: 360
                    value: root.color_1_hue
                Slider: # Lightness
                    min: 0
                    max: 100
                    value: root.color_1_light

            # Color Station 2
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Color 2"
                Slider: # Hue
                    min: 0
                    max: 360
                    value: root.color_2_hue
                Slider: # Lightness
                    min: 0
                    max: 100
                    value: root.color_2_light

        # HANDLES
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "E (GRID)"
                on_press: root.toggle_drawer('E')
            Button:
                text: "F (TIPS)"
                on_press: root.toggle_drawer('F')
            Button:
                text: "G (COLOR)"
                on_press: root.toggle_drawer('G')
