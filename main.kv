<KindsRoot>:
    orientation: 'vertical'

    # AREA A: THE CANVAS (Top 70%) - Nothing blocks this
    RelativeLayout:
        size_hint_y: 0.7
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "CANVAS AREA"
            color: 0.5, 0.5, 0.5, 1

    # THE WORKBENCH (Middle Strip)
    BoxLayout:
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Eraser"
        Button:
            text: root.active_lead
            on_press: root.cycle_h_lead()

    # THE DRAWERS (Bottom 20%)
    BoxLayout:
        size_hint_y: 0.2
        spacing: 2
        Button:
            text: "E"
        Button:
            text: "F"
        Button:
            text: "G"
        Button:
            text: "H"
